<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="E3_BarrocIntens.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E3_BarrocIntens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="UsernameInput" Width="200" PlaceholderText="Username" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordInput" Width="200" Margin="0,10,0,0"/>
        <Button Content="Login" Width="200" Click="LoginButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Page>
